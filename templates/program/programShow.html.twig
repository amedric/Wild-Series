{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>{{ program.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ program.title }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ program.synopsis }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('app_program_edit', {'id': program.id}) }}" class="link">edit</a>
    {{ include('program/_delete_form.html.twig') }}
    <a href="{{ path('app_program_index') }}" class="link">back to list</a>
{% endblock %}
