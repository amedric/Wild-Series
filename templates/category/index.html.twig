{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <div class="category-index-container">
        <h1>Categories: </h1>
        {% for category in categories %}
        <a href="{{ path("category_show", { categoryName: category.name }) }}" class="category-link">
            <div class="program-index-seriesCard">
                <h3>{{ category.name }}</h3>
            </div>
        </a>
        {% else %}
            No categories found.
        {% endfor %}
    </div>
{% endblock %}
